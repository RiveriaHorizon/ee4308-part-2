{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++11",
        "${file}",
        "${workspaceFolder}/cpp-spline/spline/src/main/cpp/BSpline.cpp",
        "${workspaceFolder}/cpp-spline/spline/src/main/cpp/Curve.cpp",
        "${workspaceFolder}/cpp-spline/spline/src/main/cpp/Vector.cpp",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}",
        "-I${workspaceFolder}/lib/",
        "-I${workspaceFolder}/cpp-spline/spline/src/main/cpp/",
        "-I${workspaceFolder}/matplotlib-cpp/",
        "-I/usr/include/python2.7",
        "-lpython2.7"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}